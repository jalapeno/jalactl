apiVersion: jalapeno.srv6/v1
kind: PathRequest
metadata:
  name: amsterdam-routes
spec:
  - name: amsterdam-to-rome
    platform: vpp
    graph: ipv6_graph
    pathType: shortest_path
    source: hosts/amsterdam
    destination: hosts/rome
    destination_prefix: "fc00:0:107:1::/64"
    bsid: "101::101"  # for vpp routes
